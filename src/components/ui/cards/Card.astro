---

// Importing necessary functions from Astro
import type { CollectionEntry } from 'astro:content'
import { getCollection } from 'astro:content'
import Img from '@components/images/Headline.webp'

// Fetching all the product related content and sorting it by main.id
const product: CollectionEntry<'products'>[] = (
  await getCollection('products')
).sort(
  (a: CollectionEntry<'products'>, b: CollectionEntry<'products'>) =>
    a.data.main.id - b.data.main.id
)

const categories = Array.from(
  new Set(product.map((product) => product.data.category))
)
---

<style>
  .card {
    background: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    text-align: center;
    max-width: 400px;
    margin: auto;
  }

  .card img {
    width: 100%;
    border-bottom: 1px solid #f0f0f0;
  }

  .card .tags {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: -1rem;
    padding: 0.5rem;
  }

  .card .tag {
    background-color: #ffd700;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: bold;
  }

  .tag.akuntansi { background-color: #00aaff; }
  .tag.inventori { background-color: #6c63ff; }

  .card .content {
    padding: 1rem;
  }

  .card .title {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .card .description {
    font-size: 1rem;
    color: #666;
  }
</style>

<div class="card mt-10">
  <img src="{Img}" alt="Image description">
  <div class="tags">
    <div class="tag">Kasir Online</div>
    <div class="tag akuntansi">Akuntansi</div>
    <div class="tag inventori">Inventori</div>
  </div>
  <div class="content">
    <div class="title">Catat dan Kelola Semua Transaksi dari Satu Aplikasi</div>
    <div class="description">Maksimalkan keuntungan dengan pengelolaan penjualan, keuangan, dan inventori.</div>
  </div>
</div>
